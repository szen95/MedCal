<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="szenmedcal1.medcal1.szen95.szenmedcal1.AnionGap$AnionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Na+ (mEq/L)"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/sodiumText"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cl- (mEq/L)"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/grey_700"
        android:layout_below="@+id/sodiumText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/chlorideText"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HC03- (mEq/L)"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/grey_700"
        android:layout_below="@+id/chlorideText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/bicarbonateText"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateClickHandler"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="Calculate"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bicarbonateText"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:id="@+id/anionLabel"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EmptyString"
        android:layout_below="@+id/calculateButton"/>

</RelativeLayout>
