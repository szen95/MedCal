<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="szenmedcal1.medcal1.szen95.szenmedcal1.ABPI$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ankle systolic BP"
        android:id="@+id/textView8"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/paText"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brachial systolic BP"
        android:id="@+id/textView15"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/grey_700"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/paText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/pbText"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateClickHandler"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="Calculate"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/pbText"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:id="@+id/resLabel"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EmptyString"
        android:layout_below="@+id/calculateButton"/>

</RelativeLayout>
