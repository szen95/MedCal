<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="szenmedcal1.medcal1.szen95.szenmedcal1.BMRMale$PlaceholderFragment">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="30dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="fill"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:text="Temperature &gt; 38 &#x2103;/&lt; 36&#x2103;"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="20dp"
        android:layout_gravity="fill"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:entries="@array/condition"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView15"
        android:layout_gravity="fill"
        >

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate &gt; 90"
        android:id="@+id/textView16"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/spinner1"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:entries="@array/condition"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView16"
        android:layout_gravity="fill"
        >

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resp. Rate &gt; 20/PaC02 &lt; 32mmHg"
        android:id="@+id/textView17"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/spinner2"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:entries="@array/condition"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView17"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        >

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WBC &gt; 12000/mm3, &lt; 4000/mm3, or &gt; 10% bands"
        android:id="@+id/textView18"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/spinner3"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:entries="@array/condition"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView18"
        android:layout_gravity="fill"
        >

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sepsis Criteria"
        android:id="@+id/textView21"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/spinner4"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suspected or Present Source of Infection"
        android:id="@+id/textView19"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/textView21"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:entries="@array/condition"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView19"
        android:layout_gravity="fill"
        >

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Severe Sepsis Criteria (Organ Dysfunction, Hypotension, or Hypoperfusion)"
        android:id="@+id/textView22"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/spinner5"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lactic Acidosis, SBP &gt; 90 or SBP Drop &gt; 40 mm Hg of normal"
        android:id="@+id/textView20"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/textView22"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner6"
        android:entries="@array/condition"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView20"
        android:layout_gravity="fill"
        >

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Septic Shock Criteria"
        android:id="@+id/textView23"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/spinner6"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Severe Sepsis with Hypotension, despite adequate fluid resuscitation"
        android:id="@+id/textView24"
        android:textSize="25dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/textView23"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner7"
        android:entries="@array/condition"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView24"
        android:layout_gravity="fill"
        >

    </Spinner>



    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateClickHandler"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="Calculate"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner7"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="fill" />

    <TextView
        android:id="@+id/resLabel"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey_700"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EmptyString"
        android:layout_below="@+id/calculateButton"
        android:layout_gravity="fill"        />


</RelativeLayout>
